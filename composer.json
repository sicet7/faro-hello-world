{
    "name": "sicet7/faro-hello-world",
    "license": "MIT",
    "type": "project",
    "description": "Test project for faro",
    "require": {
        "sicet7/faro-swoole": "*",
        "sicet7/faro-slim": "*",
        "sicet7/faro-config-console": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "ln -sf vendor/bin/faro faro"
        ]
    },
    "repositories": [
        {
            "type": "path",
            "url": "./lib/faro-config/",
            "options": {
                "symlink": false
            }
        },{
            "type": "path",
            "url": "./lib/faro-config-console/",
            "options": {
                "symlink": false
            }
        },{
            "type": "path",
            "url": "./lib/faro-console/",
            "options": {
                "symlink": false
            }
        },{
            "type": "path",
            "url": "./lib/faro-core/",
            "options": {
                "symlink": false
            }
        },{
            "type": "path",
            "url": "./lib/faro-event/",
            "options": {
                "symlink": false
            }
        },{
            "type": "path",
            "url": "./lib/faro-slim/",
            "options": {
                "symlink": false
            }
        },{
            "type": "path",
            "url": "./lib/faro-swoole/",
            "options": {
                "symlink": false
            }
        },{
            "type": "path",
            "url": "./lib/faro-web/",
            "options": {
                "symlink": false
            }
        }
    ]
}
